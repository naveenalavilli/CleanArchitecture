@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<h4>Associate your @Model.LoginProvider account.</h4>
<hr />

<p class="text-info">
    You've successfully authenticated with <strong>@Model.LoginProvider</strong>.
    Please update these few more details below and click the Register button to finish
    logging in.
</p>

<div class="form-row justify-content-center">
    <div class="col">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
           

            <div class="row">


                <div class="col">
                    <div class="row">
                        <div class="col">
                            <div class="form-group mt-0">
                                <input type="text" class="form-control" asp-for="Input.Email" required autofocus>
                                <label for="Input.Email"> Email Address</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-group mt-0">
                                <input type="text" class="form-control" asp-for="Input.FirstName" required autofocus>
                                <label for="Input.FirstName"> First Name </label>
                            </div>
                        </div>

                        <div class="col">
                            <div class="form-group mt-0">
                                <input type="text" class="form-control" asp-for="Input.LastName" required>
                                <label for="Input.LastName"> Last Name </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row justify-content-md-center">
                <button type="submit" class="btn btn-primary align-content-center">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {

            $('.footer').css("position", "sticky");

        });
    </script>


}
