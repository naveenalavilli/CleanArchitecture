@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center">
    <div class="row">

        <div class="col">

            <h3 class="text-dark mt-4">Oops ! </h3>

            <h2 class="text-dark mt-3 ">
                That page isn't available.
            </h2>

            <h2 class="text-dark mt-2">
                Redirecting you to the home page..
            </h2>
            <div class="progress md-progress success-color-dark">
                <div class="indeterminate"></div>
            </div>

            <a href="/" class="btn btn-link h3-responsive mt-3">Click here.</a>
        </div>

        <div class="col col-md-auto">

        </div>
    </div>
</div>



