@using Microsoft.AspNetCore.Identity
@using ApplicationCore.Data.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <ul class="navbar-nav">

        @if (SignInManager.IsSignedIn(User))
        {
        <li class="nav-item">
            <a class="nav-link btn btn-link waves-effect font-weight-bolder text-dark" style="font-size:large"
               asp-area="" asp-controller="AddressStates"
               asp-action="Index">States</a>
        </li>
            <li class="nav-item">
                <a class="nav-link btn btn-link waves-effect font-weight-bolder text-dark" style="font-size:large"
                   asp-area="Identity" asp-page="/Account/Manage/Index"
                   title="My Profile">
                    @*Hello @UserManager.GetUserAsync(User).Result.FirstName*@
                    My Profile
                </a>
            </li>
            <li class="nav-item">
                <form class="flex-center" asp-area="Identity" style="font-size:large"
                      asp-page="/Account/Logout"
                      asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" style="font-size:large"
                            class="nav-link btn btn-link waves-effect font-weight-bolder text-dark">
                        Logout
                    </button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link btn btn-link waves-effect font-weight-bolder text-dark" style="font-size:large"
                   asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link btn btn-link waves-effect font-weight-bolder text-dark" style="font-size:large"
                   asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>
